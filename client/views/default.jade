extend layout

block styles
  link(rel='stylesheet', href='/static/css/menu.css')
  link(rel='stylesheet', href='/static/css/home.css')

block menu
  div.menuContainer.col-xs-12
    div.itemsContainer.col-xs-10.col-xs-offset-1
      div.search.col-xs-4
      div.nav.col-xs-8
        ul.navItems

         li
           a(href="/") home
         li
           a(href='/my-events') events

         li
           a(href='/logout') logout
         li
           a(href='/login') login






block content
  #{user}
  base(href="/")
  div(ng-view) 
  script userData = !{JSON.stringify(user)}
  script if(user) { data = userData } }
  script if(data) { sessionStorage.setItem('user', data) }
  script if(sessionStorage.getItem('user')) { userInfo = JSON.parse(sessionStorage.getItem('user')); }
  script if(userInfo) { userId = userInfo._id; }
